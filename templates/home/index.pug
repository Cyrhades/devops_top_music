doctype html
html(lang="fr")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
        title TOP Music
    body 
        .container
            form(action="/" method="get")
                p
                    input(type="search" name="keyword" value=keyword) 
                p 
                    button(type="submit") Chercher 

            #result

            input(type="hidden" id="artist_song" value="")
            input(type="hidden" id="title_song" value="")

            if musics
                .row
                    .col-6
                        for track in musics 
                            p #{track.title}
                            p #{track.artist}
                            img(src=track.cover)
                            a(href="javascript:;" data-title=track.title data-artist=track.artist_name data-music=track.preview) Ecouter
                    .col-6 
                        p Test
                        audio#listenTopMusic(controls)
        
        script(src="/js/blindTest.js")
        script(src="/js/voice.js")
        script(src="/js/main.js")