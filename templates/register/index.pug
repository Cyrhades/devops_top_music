extends ../layout.pug

block content 
    .container
        .row.justify-content-center.mt-4
            .col.col-5.mt-4
                h3 Inscription
                .card
                    .card-body   
                        form(action="/inscription" method="post")
                            .input-group.mb-3
                                span.input-group-text 
                                    i.fa.fa-user
                                input.form-control(type="text" name="firstname" id="firstname"  placeholder="Votre pr√©nom")
                            .input-group.mb-3
                                span.input-group-text 
                                    i.fa.fa-user
                                input.form-control(type="text" name="lastname" id="lastname"  placeholder="Votre nom")
                            .input-group.mb-3
                                span.input-group-text
                                    i.fa.fa-envelope
                                input.form-control(type="email" name="email" id="email"  placeholder="Votre adresse mail")
                            .input-group.mb-3
                                span.input-group-text 
                                    i.fa.fa-lock
                                input.form-control(type="password" name="password" id="password"  placeholder="Votre mot de passe")
                            .text-center   
                                button.btn.btn-primary(type="submit") S'inscrire