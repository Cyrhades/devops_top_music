doctype html
html(lang="fr")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
        block stylesheet 
        
        title TOP Music
    body
        nav.navbar.bg-body-tertiary
            .container
                a.navbar-brand(href="/")
                    img(src="/images/logo.png" alt="Logo" height="30")
                    span &nbsp; 
                    img(src="/images/logo_text.png" alt="Logo" height="30")
                ul.nav.nav-underline
                    li.nav-item
                        a.nav-link(aria-current="page" href="/" class=(app.route=="/"?"active":"")) Accueil
                    li.nav-item
                        a.nav-link(href="/inscription" class=(app.route=="/inscription"?"active":"")) inscription
                    li.nav-item
                        a.nav-link(href="javascript:alert(`Cr√©er la route /connexion`)" class=(app.route=="/connexion"?"active":"")) connexion
                    li.nav-item
                        a.nav-link(href="/search" class=(app.route=="/search"?"active":"")) Chercher une musique

        - var messages = getMessages()

        if messages.notify || messages.error
            .container.mt-4
                if messages.notify
                    each msg in messages.notify
                        .alert.alert-info= msg
                if messages.error
                    each msg in messages.error
                        .alert.alert-danger= msg         
        block content


        script(src=process.env.BROWSER_REFRESH_URL)