extends ../layout.pug

block content 
    .container
        .row.justify-content-center.mt-4
            .col.col-5.mt-4
                h3 Connexion
                .card
                    .card-body   
                        if error 
                            .alert.alert-danger #{error}         
                        form(action="/connexion" method="post") 
                            .input-group.mb-3
                                span.input-group-text
                                    i.fa.fa-envelope
                                input.form-control(type="email" name="email" id="email" value=email placeholder="Votre adresse mail")
                            .input-group.mb-3
                                span.input-group-text 
                                    i.fa.fa-lock
                                input.form-control(type="password" name="password" id="password"  placeholder="Votre mot de passe")
                            .text-center   
                                button.btn.btn-primary(type="submit") Se connecter